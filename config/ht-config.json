{
    "data": {
        "batch_size": 4,
        "datasets": {
            "tis": "datasets/tis"
        }
    },
    "model": {
        "hubert_model_name": "facebook/hubert-base-ls960",
        "trainable_layers": 10
    },
    "optimizer": {
        "class_path": "Adam",
        "init_args": {
            "lr": 0.000001
        }
    },
    "trainer": {
        "callbacks": [
            {
                "class_path": "lightning.pytorch.callbacks.EarlyStopping",
                "init_args": {
                    "mode": "max",
                    "monitor": "validation_f1",
                    "patience": 10
                }
            },
            {
                "class_path": "lightning.pytorch.callbacks.ModelCheckpoint",
                "init_args": {
                    "filename": "checkpoint-{epoch}-{validation_f1:.5f}",
                    "mode": "max",
                    "monitor": "validation_f1",
                    "save_top_k": 1
                }
            },
            {
                "class_path": "lightning.pytorch.callbacks.ModelCheckpoint",
                "init_args": {
                    "save_last": true
                }
            }
        ],
        "logger": {
            "class_path": "lightning.pytorch.loggers.TensorBoardLogger",
            "init_args": {
                "default_hp_metric": false,
                "name": "ht-finetune",
                "save_dir": "lightning_logs"
            }
        },
        "precision": "16-mixed"
    }
}