{
    "data": {
        "allowed_chars": "!'(),.:;? \\-abcdefghijklmnopqrstuvwxyz",
        "batch_size": 1,
        "csv_test": "ljspeech-test.csv",
        "csv_train": "ljspeech-train.csv",
        "csv_val": "ljspeech-val.csv",
        "end_token": "^",
        "expand_abbreviations": true,
        "num_mels": 80,
        "num_workers": 4,
        "sample_rate": 24050,
        "silence": 0,
        "trim": true,
        "trim_frame_length": 1024,
        "trim_top_db": 40
    },
    "model": {
        "att_dim": 128,
        "att_rnn_dim": 1024,
        "num_chars": 39,
        "dropout": 0.5,
        "encoded_dim": 512,
        "encoder_kernel_size": 5,
        "num_mels": 80,
        "postnet_dim": 512,
        "prenet_dim": 256,
        "rnn_hidden_dim": 1024,
        "speaker_tokens_enabled": true,
        "speaker_count": 1
    },
    "optimizer": {
        "class_path": "Adam",
        "init_args": {
            "lr": 1e-3,
            "weight_decay": 1e-6
        }
    },
    "trainer": {
        "callbacks": [
            {
                "class_path": "lightning.pytorch.callbacks.EarlyStopping",
                "init_args": {
                    "mode": "max",
                    "monitor": "validation_f1",
                    "patience": 25
                }
            },
            {
                "class_path": "lightning.pytorch.callbacks.ModelCheckpoint",
                "init_args": {
                    "filename": "checkpoint-{epoch}-{validation_f1:.5f}",
                    "mode": "max",
                    "monitor": "validation_f1",
                    "save_top_k": 1
                }
            }
        ],
        "logger": {
            "class_path": "lightning.pytorch.loggers.TensorBoardLogger",
            "init_args": {
                "default_hp_metric": false,
                "name": "tacotron2",
                "save_dir": "lightning_logs"
            }
        },
        "precision": "16-mixed"
    }
}
